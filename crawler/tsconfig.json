{
  "compilerOptions": {
    "module": "commonjs",
    "types": [ "node"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib":["dom","dom.iterable","esnext","esnext.array","esnext.asynciterable","es2015"]
  },
  "include": [
    "src/**/*",
    "config/config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
